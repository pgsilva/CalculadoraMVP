<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout tools:context=".view.MainActivity" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="5dp">

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="2" android:hint="@string/valor1" android:id="@+id/valor1"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1" android:hint="@string/operador" android:id="@+id/operador"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="2" android:hint="@string/valor2" android:id="@+id/valor2"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="="/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="2" android:hint="@string/resultado" android:id="@+id/resultado" android:editable="false"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="5dp" android:gravity="right">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="@string/calcular" android:onClick="calcular"/>

</LinearLayout>

</LinearLayout>